{{ form_start(form) }}
<div class="mt-2">
    {{ form_row(form.title) }}
</div>
<div class="mt-2">
    {{ form_row(form.descriptionShort) }}
</div>
<div class="mt-2">
    {{ form_row(form.descriptionLong) }}
</div>
<div class="mt-2">
    {{ form_row(form.news_photo) }}
</div>
<div class="mt-2">
    {{ form_row(form.categories, {attr : {'class' : 'checkboxes-template'}}) }}
</div>
<div class="mt-2">
    <button type="submit" class="btn btn-warning my-2">{{ button_label|default('Enregistrer') }}</button>
</div>
{{ form_end(form) }}