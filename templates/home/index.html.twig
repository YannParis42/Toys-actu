{% extends 'front.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block content %}

<section class="slider">
  <div class="carousel slide carousel-fade" data-bs-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="{{asset('uploads/photo/db.jpg')}}" class="d-block w-100" alt="...">
      </div>
      <div class="carousel-item">
        <img src="{{asset('uploads/photo/street-fighter.jpg')}}" class="d-block w-100" alt="...">
      </div>
      <div class="carousel-item">
        <img src="{{asset('uploads/photo/sw.jpg')}}" class="d-block w-100" alt="...">
      </div>
    </div>
</section>

<section>
  <div class="text-center over">
    <a href="#actu">
      <i class="fa-solid fa-angles-down orange"></i>
    </a>
  </div>

  <div id="actu" class='container m-auto'>
    <div class="mt-2">
      {% include "/home/_search.html.twig" %}
    </div>

    <div class="row justify-content-center">
      {% for actu in news %}
      {% include "/common/_card_actu.html.twig" %}
      {% endfor %}
      {% if news == null %}
      {% include "/home/_null.html.twig" %}
      {% endif %}
    </div>
  </div>
</section>


{% endblock %}