    <a type="button" class="btn btn-primary" href="{{ path('app_news_user', {'id': app.user.id}) }}">Retour</a>
    <hr>

    <div class="edit m-auto p-4"> 
        {% if news.newsPhoto %}
        <h2>Image actuelle:</h2>
