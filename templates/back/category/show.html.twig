{% extends 'admin.html.twig' %}

{% block title %}Back-office{% endblock %}

{% block content %}
{% if is_granted('ROLE_ADMIN') %}

<div class="ms-4">
    <h1>Détails</h1>
    <hr>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Libéllé</th>
                <td>{{ category.label }}</td>
            </tr>
            <tr>
                <th>Créé par</th>
                <td>{{category.createdBy.username}}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex">
        {% if is_granted('ROLE_ADMIN') %}
        <a type="button" class="btn btn-warning mx-2" href="{{ path('app_category_edit', {'id': category.id}) }}"><i
                class="fa-solid fa-pen"></i></a>
        {{ include('category/_delete_form.html.twig') }}
        {% endif %}
    </div>

</div>

{% else %}
<div class="text-center">
    <h2>Vous n'avez pas les droits!</h2>
    <a type="button" class="btn btn-danger m-4" href="{{ path('app_home') }}">Retour accueil</a>
</div>
{% endif %}
{% endblock %}